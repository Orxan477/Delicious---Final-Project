@model RegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
    <partial name="_IdentityHeaderPartial" />
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">Register</h3>
                        <div asp-validation-summary="ModelOnly" class=text-danger></div>
                        @if (@ViewBag.IsSuccessful == true)
                        {
                            <div class="alert alert-success" role="alert">
                                    Confirm mail sended. Please Confirm your Mail.
                                </div>
                        }
                            <form method="post">
                                <div class="form-group">
                                    <label asp-for="FullName">Full Name</label>
                                    <input asp-for="FullName" class="form-control p_input" placeholder="Full Name">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserName">User Name</label>
                                    <input asp-for="UserName" class="form-control p_input" placeholder="User Name">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control p_input" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Number"></label>
                                    <input asp-for="Number" class="form-control p_input" placeholder="Example: 994..."
                                    oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"
                                       maxlength="12"
                                       minlength="12" />
                                    <span asp-validation-for="Number" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control p_input" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" class="form-control p_input" placeholder="Confirm Password">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Sign Up</button>
                                </div>
                            </form>
                                <p class="sign-up">Do you already have an account?<a asp-controller="Account" asp-action="Login"> Sign In</a></p>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <partial name="_IdentityFooterPartial" />
</body>
</html>

