@model HomeVM
@{
    ViewData["Title"] = "Team";
}

<main>
        <section id="team" class="mt-2">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 teamIntro mb-3">
                        <h3>Our <span>Team</span></h3>
                        <p>Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.</p>
                    </div>
                </div>
                <div class="row">
                    @foreach (var person in Model.Teams)
                   {
                       <div class="col-lg-4 col-md-6 col-sm-12 py-3">
                        <div class="employee">
                            <div class="image">
                                <img src="~/assets/img/@person.Image" data-toggle="modal" data-target="#exampleModal-@person.Id"
                                    class="card-img-top" alt="">
                            </div>
                            <div class="image-info">
                                <h4>@person.FullName</h4>
                                <span>@person.Position.Name</span>
                                <ul>
                                    <li><a href="#"><i class="fab fa-twitter social-logo"></i></a></li>
                                    <li><a href="#"><i class="fab fa-facebook social-logo"></i></a></li>
                                    <li><a href="#"><i class="fab fa-instagram social-logo"></i></a></li>
                                    <li><a href="#"><i class="fab fa-linkedin social-logo"></i></a></li>
                                </ul>
                            </div>
                        </div>
                         <div class="modal fade" id="exampleModal-@person.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header d-flex justify-content-center  ">
                                        <h5 class="modal-title" id="exampleModalLabel">@person.FullName</h5>
                                    </div>
                                    <div class="modal-body d-flex justify-content-center">
                                        <div class="col-lg-5 p-0">
                                            <img src="~/assets/img/@person.Image" width="200px">
                                        </div>
                                        <div class="col-lg-7 p-0">
                                             <p class="ml-4">@person.About</p>
                                        </div>
                                       
                                    </div>
                                </div>
                                <div class="modal-footer" style="background:white; border-top:1px solid black">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                        </div>
                   }
                </div>
            </div>
        </section>
        @section Script
{
    <script src="~/assets/js/NavLink.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="~/assets/js/otherPage.js"></script>
}
    </main>

