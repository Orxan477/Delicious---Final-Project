@model HomeVM
@{
    ViewData["Title"] = "Menu";
}

<main>
        <section id="menu" class="mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 menuIntro">
                        <h3>Check our tasty <span>Menu</span></h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-center mt-3">
                        <ul class="category d-flex">
                            @foreach (var category in Model.MenuVM.Categories)
                           {
                              <li><a href="" data-id="@category.Name.ToLower()" class=" mr-3 product">@category.Name</a></li> 
                           }
                        </ul>
                    </div>
                </div>
                <div class="row products">
                    <partial name="_MenuPartial" />
                </div>
                <input type="hidden" id="productCount" value="@ViewBag.productsCount" />
                <div class="row my-5 justify-content-center">
                    <button class="btn btn-warning" id="load">More</button>
                </div>
            </div>
        </section>
        @section Script
{
    <script src="~/assets/js/NavLink.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="~/assets/js/otherPage.js"></script>
    <script src="~/assets/js/menu.js"></script>
}
    </main>

