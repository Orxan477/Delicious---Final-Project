@model HomeVM
@{
    ViewData["Title"] = "Menu";
}

<main>
        <section id="menu" class="mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 menuIntro">
                        <h3>Check our tasty <span>Menu</span></h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-center mt-3">
                        <ul class="category d-flex">
                            @foreach (var category in Model.MenuVM.Categories)
                           {
                              <li><a href="" data-id="@category.Name.ToLower()" class=" mr-3 product">@category.Name</a></li> 
                           }
                        </ul>
                    </div>
                </div>
                <div class="row">
                    @foreach (var pro in Model.MenuVM.Products)
                   {
                       <div class="col-lg-3 col-md-4 col-sm-6 mt-3 ">
                        <div class="product-item text-center" data-id="@pro.Category.Name.ToLower()">
                            <div class="img">
                                <a href="#">
                                    <img src="~/assets/img/@pro.MenuImage.Image" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@pro.Name</h6>
                            </div>
                            <div>
                                <p class="text-black-50">@pro.Description</p>
                                <span class="text-black-50">
                                    @if (pro.Category.Name.ToLower().Trim()=="pizza")
                                   {
                                       <a href="#" data-toggle="modal" data-target="#pro-@pro.Id"
                                        class="btn btn-warning mt-2">Secin</a>
                                    }
                                    else {
                                        
                                        <form asp-action="AddBasket" asp-route-id="@pro.Id" method="post" >
                                               <button type="submit" class="btn btn-warning">Add to Cart</button>
                                            </form>
                                   }
                                </span>
                            </div>
                        </div>
                        @if (pro.Category.Name.ToLower().Trim()=="pizza")
                        {
                            <div class="modal fade" id="pro-@pro.Id" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog " role="document">
                                <div class="modal-content">
                                    <div class="modal-header d-flex justify-content-center">
                                        <h5 class="modal-title" id="exampleModalLabel">Americano Hot</h5>
                                    </div>
                                    <div class="modal-body menu-modal">
                                        <div class="d-flex justify-content-center">
                                            <img src="~/assets/img/@pro.MenuImage.Image" style="width: 60%;"
                                                class="img-fluid" alt="">
                                        </div>
                                        <p class="text-black-50 mt-3 mb-0 px-2">@pro.Description</p>
                                        <div class="size">
                                            <select name="size" id="pizza">
                                                @{
                                                    double n = @pro.Price;
                                                    double orta = (n * 1.5);
                                                    double boyuk = (n * 2.5);
                                                }
                                                   <option value="@pro.Price" >Kiçik - @pro.Price</option>
                                                   <option value="@orta.ToString()" >Orta - @orta</option>
                                                   <option value="@boyuk.ToString("F2")" >Böyük - @boyuk</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Cancel</button>
                                            @*@{int s = 1;}*@
                                            <form asp-action="AddBasket" asp-route-id="@pro.Id"  method="post" >
                                                <button type="submit" class="btn btn-warning">Add to Cart</button>
                                                @*@{s++;}*@
                                            </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                   }
                </div>
            </div>
        </section>
        @section Script
{
    <script src="~/assets/js/script.js"></script>
    <script src="~/assets/js/otherPage.js"></script>
    <script src="~/assets/js/menu.js"></script>
}
    </main>

