@model HomeVM
@{
    ViewData["Title"] = "MyOrder";
    int n = 1;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            @*<div class="card">*@
                <div class="card-body" style="margin-top:120px;">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Address</th>
                                    <th>Count</th>
                                    <th>Order Date</th>
                                    <th>Status</th>
                                    <th>Order Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.FullOrders)
                                {
                                    <tr>
                                        <th scope="row">@n</th>
                                        <td>@item.BillingAdress</td>
                                        <td>@item.Orders.Count()</td>
                                        <td>@item.CreatedAt</td>
                                        @if (item.Status=="pending")
                                       {
                                           <td style="text-align:center;" class="text-danger">@item.Status</td>
                                       }
                                       @if (item.Status=="preparing")
                                       {
                                           <td style="text-align:center;" class="text-primary">@item.Status</td>
                                       }
                                       @if (item.Status=="way")
                                       {
                                           <td style="text-align:center;" class="text-warning">@item.Status</td>
                                       }
                                       @if (item.Status=="delivired")
                                       {
                                           <td style="text-align:center;" class="text-success">@item.Status</td>
                                       }
                                        <td>@item.Total $</td>
                                    </tr>
                                    n++;
                                }
                            </tbody>
                        </table>
                    </div>
                @*</div>*@
            </div>
        </div>
    </div>
</div>
@section Script
            {
<script src="~/assets/js/otherPage.js"></script>
<script src="~/assets/js/menu.js"></script>
            }