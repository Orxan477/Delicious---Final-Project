@model HomeVM
@{
    ViewData["Title"] = "Confirm Order";
}

<div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 grid-margin stretch-card" style="margin-top:150px">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <form class="forms-sample d-inline" method="post">
                        <div class="form-group">
                            <label asp-for="BillingAdressesVM.Adress"></label>
                            <textarea asp-for="BillingAdressesVM.Adress" class="form-control" placeholder="Adress"></textarea>
                            <span class="text-danger" asp-validation-for="BillingAdressesVM.Adress"></span>
                        </div>
                        <button type="submit" class="btn btn-warning mr-2" asp-action="Buy">Submit</button>
                    </form>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
        </div>
    </div>
     @section Script
{
    <script src="~/assets/js/script.js"></script>
    <script src="~/assets/js/otherPage.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
