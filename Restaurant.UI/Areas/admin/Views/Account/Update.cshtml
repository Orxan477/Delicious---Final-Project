@model AppUserVM
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>FullName</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Change Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.FullName</td>
                                <td>@Model.Email</td>
                                <td>@Model.Role</td>
                                <td>
                                    <form method="post">
                                        <div class="form-group d-inline-block">
                                            <label asp-for="NewRole" class="d-block">Roles</label>
                                            <select asp-for="NewRole" asp-items="@ViewBag.Roles" class="form-select d-block" aria-label="Default select example">
                                            </select>
                                            <span class="text-danger" asp-validation-for="NewRole"></span>
                                        </div>
                                        <button type="submit" class="btn btn-warning">Submit</button>
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
