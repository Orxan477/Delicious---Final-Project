@model IEnumerable<RestaurantPhotos>

@{
    ViewData["Title"] = "Index";
    int n = 1;
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Product</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Image</th>
                            <th>Setting</th>
                          </tr>
                        </thead>
                        <tbody>
                         @foreach (var resturant in Model)
                        {
                         <tr>
                            <td>@n</td>
                            <td ><img src="~/assets/img/@resturant.Image" style="width:100px; height:100px;"  /></td>
                            <td>
                                    <a asp-action="Update" class="btn btn-warning" asp-route-id="@resturant.Id"><i class="mdi mdi-table-edit"></i></a>
                                   @* <form class="d-inline delete-btn" asp-action="Delete" asp-route-id="@pro.Id" method="post">
                                        <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                                    </form>*@
                                    <a asp-action="Delete" class="btn btn-danger delete-btn" asp-route-id="@resturant.Id"><i class="mdi mdi-delete-forever"></i></a>
                                </td>
                                </tr>
                                n++;
                            }
                        </tbody>
                        @if (@ViewBag.RestaurantPhoto<8)
                       {
                           <div class="d-flex justify-content-end">
                            <a asp-area="Admin" asp-controller="Gallery" asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle"></i></a>
                        </div>
                       }
                      </table>
                    </div>
                  </div>
                </div>
              </div>
</div>