@model IEnumerable<Setting>
@{
    ViewData["Title"] = "Index";
    int n = 1;
}

<div class="row">
    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Setting</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Key</th>
                                <th>Value</th>
                                <th>Setting</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@n</td>
                                <td>@item.Key</td>

                                <td>@item.Value</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">
                                        Update
                                    </a>
                                </td>
                                </tr>
                                n++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>