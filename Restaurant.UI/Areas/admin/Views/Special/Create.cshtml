@model CreateSpecialVM
@{
    ViewData["Title"] = "Create";
}

@*<div class="container">*@
<row>
    <div class="col-md-12 grid-margin stretch-card mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="InformationTabHead">Information Head</label>
                        <textarea asp-for="InformationTabHead" class="form-control" placeholder="Head"></textarea>
                        <span class="text-danger" asp-validation-for="InformationTabHead"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InformationTabContent">Information Content</label>
                        <input asp-for="InformationTabContent" class="form-control" placeholder="Content">
                        <span class="text-danger" asp-validation-for="InformationTabContent"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InformationTabItalicContent">Italic Content</label>
                        <input asp-for="InformationTabItalicContent" class="form-control" placeholder="Italic Content">
                        <span class="text-danger" asp-validation-for="InformationTabItalicContent"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductId" class="d-block">Image</label>
                        <select asp-for="ProductId" asp-items="@ViewBag.Product" class="form-select append-image" id="select-image" aria-label="Default select example">
                            <span class="text-danger" asp-validation-for="ProductId"></span>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</row>

@section ValidatorScript{
<partial name="_ValidationScriptsPartial" />
    }
@*</div>*@

