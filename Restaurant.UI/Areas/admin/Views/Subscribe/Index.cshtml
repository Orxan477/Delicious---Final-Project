@model IEnumerable<Subscribe>
@{
    ViewData["Title"] = "Index";
    int n = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Subscribe</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Email</th>
                            <th>Setting</th>
                          </tr>
                        </thead>
                        <tbody>
                         @foreach (var subscribe in Model)
                        {
                         <tr>
                            <td>@n</td>
                            <td>@subscribe.Email</td>
                            <td>
                                    <form class="d-inline" asp-action="Delete" asp-route-id="@subscribe.Id" method="post">
                                        <button type="submit" class="btn btn-danger"><i class="mdi mdi-close-circle-outline"></i></button>
                                    </form>
                                </td>
                                </tr>
                                n++;
                            }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
</div>

