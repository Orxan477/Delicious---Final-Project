@model About
@{
    ViewData["Title"] = "Index";
    int n = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">About</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Image</th>
                            <th>Head</th>
                            <th>NormalContent</th>
                            <th>ItalicContent</th>
                            <th>NormalContent2</th>
                            <th>Link</th>
                            <th>Setting</th>
                          </tr>
                        </thead>
                        <tbody>
                         <tr>
                            <td>@n</td>
                            <td><img src="~/assets/img/@Model.Image"/></td>
                            <td>@(Model.Head.Length<=15?Model.Head:Model.Head.Substring(0,15)+"...")</td>
                            <td>@(Model.NormalContent.Length<=20?Model.NormalContent:Model.NormalContent.Substring(0,20)+"...")</td>
                            <td>@(Model.ItalicContent.Length<=20?Model.ItalicContent:Model.ItalicContent.Substring(0,20)+"...")</td>
                            <td>@(Model.NormalContent2.Length<=20?Model.NormalContent2:Model.NormalContent2.Substring(0,20)+"...")</td>
                            <td>@(Model.Link.Length<=10?Model.Link:Model.Link.Substring(0,10)+"...")</td>
                            <td>
                                    <a asp-action="Update" class="btn btn-warning" asp-route-id="@Model.Id"><i class="mdi mdi-table-edit"></i></a>                
                                </td>
                                </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
</div>

