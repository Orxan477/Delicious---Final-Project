@model ContactUsListVM
@{
    ViewData["Title"] = "SendMessage";
}

@*<div class="container">*@
<row>
    <div class="col-md-12 grid-margin stretch-card mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <label asp-for="Message"></label>
                <textarea disabled asp-for="Message" rows="5" class="form-control" style="color:black;"></textarea>
                <span class="text-danger" asp-validation-for="Message"></span>

                <form class="forms-sample d-inline" method="post" asp-action="SendMessage">
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <label asp-for="SendMessage"></label>
                        <textarea asp-for="SendMessage" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="SendMessage"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                   
                </form>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</row>
@section ValidatorScript{
<partial name="_ValidationScriptsPartial" />
    }
@*</div>*@

